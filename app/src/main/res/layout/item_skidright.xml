<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_skid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/skid_right_1"
            android:scaleType="centerCrop"
            android:transitionName="iv_skid1"/>
        <TextView
            android:id="@+id/tv_skidTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_above="@id/tv_skidContent"
            android:layout_marginLeft="20dp"
            android:transitionName="tv_skidTitle"/>
        <TextView
            android:id="@+id/tv_skidContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skid1"
            android:textColor="@color/white"
            android:maxLines="3"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:transitionName="tv_skidContent"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>